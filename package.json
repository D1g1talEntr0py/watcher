{
  "name": "watcher",
  "repository": "github:fabiospampinato/watcher",
  "description": "The file system watcher that strives for perfection, with no native dependencies and optional rename detection support.",
  "version": "2.0.0",
  "type": "module",
  "main": "dist/watcher.js",
  "exports": "./dist/watcher.js",
  "types": "./dist/watcher.d.ts",
  "scripts": {
    "clean": "tsex clean",
    "compile": "tsex compile",
    "compile:watch": "tsex compile --watch",
    "test": "fava '**/test/index.js'",
    "test:watch": "fava --watch '**/test/index.js'",
    "prepublishOnly": "npm run clean && npm run compile && npm run test"
  },
  "keywords": [
    "fs",
    "file",
    "system",
    "filesystem",
    "watch",
    "watcher"
  ],
  "dependencies": {
    "debounce": "^1.2.1",
    "ripstat": "^2.0.0",
    "tiny-readdir": "^2.1.0"
  },
  "devDependencies": {
    "@types/debounce": "^1.2.1",
    "@types/node": "^18.11.9",
    "fava": "^0.0.7",
    "fs-extra": "^10.1.0",
    "tsex": "^1.1.3",
    "typescript": "^4.9.3"
  }
}
